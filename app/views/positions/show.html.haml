- model_class = Position
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @position.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), positions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_position_path(@position), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), position_path(@position), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
