- model_class = @model
.page-header
  %h1=t '.title', :default => "Documents"
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:mailing_date)
      %th= model_class.human_attribute_name(:number)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:subject)
      %th= model_class.human_attribute_name(:status)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @records.each do |record|
      %tr
        %td= record.mailing_date
        %td= record.number
        %td= record.type_name
        %td= record.subject
        %td= Mailing::STATUS.key(record.status).to_s.titleize
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), @edit_path.call(record), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), @destroy_path.call(record), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), @new_path, :class => 'btn btn-primary'
